<%# app/views/expenses/show.html.erb %>
<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-pink-50 p-5 rounded-lg shadow">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">支出詳細</h2>

    <div class="mb-4">
      <strong class="text-gray-600">金額:</strong>
      <p class="text-lg text-gray-800"><%= @expense.amount %>円</p>
    </div>

    <div class="mb-4">
      <strong class="text-gray-600">説明:</strong>
      <p class="text-lg text-gray-800"><%= @expense.description %></p>
    </div>

    <div class="mb-4">
      <strong class="text-gray-600">日付:</strong>
      <p class="text-lg text-gray-800"><%= @expense.date.strftime("%Y年%m月%d日") %></p>
    </div>

    <%= link_to '編集', edit_user_expense_path(@user, @expense), class: "inline-block bg-pink-500 hover:bg-pink-600 text-white font-bold py-2 px-4 rounded mr-2" %>
    <%= link_to '削除', user_expense_path(@user, @expense), method: :delete, data: { turbo_confirm: '本当に削除してよろしいですか？' ,turbo_method: :delete }, class: "inline-block bg-red-500 hover:bg-red-600 text-white font-bold py-2 px-4 rounded" %>
    <%= link_to '戻る', user_expenses_path(@user), class: "inline-block bg-gray-500 hover:bg-gray-600 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
