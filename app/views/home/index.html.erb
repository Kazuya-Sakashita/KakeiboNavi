<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 p-6">
  <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
    <div class="p-5">
      <h2 class="font-bold text-xl text-gray-800 mb-4">Line Chart</h2>
      <%= line_chart @line_data, height: "300px" %>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
    <div class="p-5">
      <h2 class="font-bold text-xl text-gray-800 mb-4">Bar Chart</h2>
      <%= bar_chart @bar_data, height: "300px" %>
    </div>
  </div>

  <div class="bg-white rounded-xl shadow-lg border border-gray-200 overflow-hidden">
    <div class="p-5">
      <h2 class="font-bold text-xl text-gray-800 mb-4">Pie Chart</h2>
      <%= pie_chart @pie_data, height: "300px" %>
    </div>
  </div>
</div>
