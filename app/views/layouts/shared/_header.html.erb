      <% else %>
        <li><%= link_to 'サインアップ', new_user_registration_path, class: "hover:text-pink-600 text-gray-900" %></li>
        <li><%= link_to 'ログイン', new_user_session_path, class: "hover:text-pink-600 text-gray-900" %></li>
      <% end %>
    </ul>
  </nav>
